<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/txtView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:phoneNumber="false"
            android:shadowColor="#ffaababd"
            android:singleLine="false"
            android:text="Wifi scanner"
            android:textColor="#ff180a28"
            android:textIsSelectable="true"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnCollect"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onCollectBtn_Click"
            android:text="Collect Data"/>

        <TextView
            android:id="@+id/txtTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time remaining"/>

        <Button
            android:id="@+id/btnShow"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Show data"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lstview_AC"
            android:layout_width="match_parent"
            android:layout_height="421dp"></ListView>
    </LinearLayout>


</LinearLayout>
